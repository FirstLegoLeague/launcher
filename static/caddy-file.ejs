{
	admin off
}

:<%= configPort %> {
    root "<%= envDir %>"
    header Access-Control-Allow-Origin *
    file_server
}

<% sites.forEach(site => { -%>
:<%= site.port %> {
    root "<%= site.root %>"
    header /environment.json Cache-Control no-cache 
    redir /environment.json http://{host}:<%= configPort %>/<%= site.id %>.json permanent
<% if(site.index) { -%>
    index <%= site.index %>
<% } -%>
    file_server
}
<% }) -%>