{
  "name": "fll-launcher",
  "version": "1.0.0",
  "description": "A Launcher to the FIRST LEGO League scoring system",
  "main": "app/main.js",
  "author": "Roy Shmueli",
  "license": "MIT",
  "engines": {
    "node": ">=6.11.1"
  },
  "scripts": {
    "modules:download": "node ./build/download-modules.js",
    "start": "electron .",
    "lint": "eslint app/**/*.js",
    "lint:fix": "yarn run lint -- --fix",
    "build:win": "electron-builder -w --dir",
    "build:linux": "electron-builder -l --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.fll-tools.launcher",
    "productName": "FIRST LEGO League Launcher",
    "artifactName": "fll-launcher-${version}",
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      "app/**/*"
    ]
  },
  "dependencies": {
    "adm-zip": "^0.4.7",
    "bluebird": "^3.5.0",
    "js-yaml": "^3.9.0",
    "opn": "^5.1.0",
    "request": "^2.81.0",
    "tar-fs": "^1.15.3"
  },
  "devDependencies": {
    "electron": "^1.6.11",
    "electron-builder": "^19.16.2",
    "eslint": "^4.3.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.1"
  }
}
